<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
          <div>
            <img  class="js-pkmn-image">
          </div>

        <h3 class="modal-title">
          
        </h3>
        <p class="js-pkmn-types">
          
        </p>

      </div><!-- .modal-header -->

      <div class="modal-body">
        <dl class="dl-horizontal">

          <dt>Description</dt>
          <dd class="js-pkmn-description">Unknown</dd>

          <dt>Height</dt>
          <dd class="js-pkmn-height">Unknown</dd>

          <dt>Weight</dt>
          <dd class="js-pkmn-weight">Unknown</dd>

          <dt>HP</dt>
          <dd class="js-pkmn-hp">Unknown</dd>

          <dt>Attack</dt>
          <dd class="js-pkmn-attack">Unknown</dd>

          <dt>Defense</dt>
          <dd class="js-pkmn-defense">Unknown</dd>

          <dt>Sp. Attack</dt>
          <dd class="js-pkmn-sp-attack">Unknown</dd>

          <dt>Sp. Defense</dt>
          <dd class="js-pkmn-sp-defense">Unknown</dd>
        </dl>

        <button type="button" class="btn btn-default js-btn-evolutions">See Evolutions</button>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->


<!-- Evolutions modal view (hidden at first) -->
<div class="modal fade js-evolutions-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          
        </h3>
        <p class="js-pkmn-types">
          
        </p>

      </div><!-- .modal-header -->

      <div class="modal-body">
        <h3>Evolutions: </h3>
        <div class="js-evolutions">
          <p>This Pokemon has no evolutions.</p>
        </div>

      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->
